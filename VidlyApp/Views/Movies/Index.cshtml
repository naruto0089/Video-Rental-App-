@model IEnumerable<VidlyApp.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>

<div class="container">
	<a href="/Movies/AddMovies" class="btn btn-primary">Add New Movie</a>
	<table class="table table-bordered table-striped table-hover">
		<thead>
			<tr>
				<th>Movies</th>
				<th>Genre</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var movie in Model)
			{
			<tr>
				
				<td>
					@Html.ActionLink(@movie.Name, "Edit", "Movies", new { id = movie.Id }, null)
				</td>
				<td>@movie.Genre.Name</td>
			</tr>

			}
		</tbody>
	</table>
</div>

