@model VidlyApp.ViewModels.CustomerFormView
@{
	
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>
@using (Html.BeginForm("Save", "Customers"))
{
	<div class="form-group">
		@Html.LabelFor(m => m.Customer.Name)
		@Html.TextBoxFor(m => m.Customer.Name, new { @class = "form-control" })
		@Html.ValidationMessageFor(m=>m.Customer.Name)
	</div>
	<div class="form-group">
		@Html.LabelFor(m => m.Customer.BirthDate)
		@Html.TextBoxFor(m => m.Customer.BirthDate, "{0:dd/MM/yyyy}", new { @class = "form-control" })
	</div>
	<div class="form-group">
		@Html.LabelFor(m => m.Customer.MembershipTypeId)
		@Html.DropDownListFor(m => m.Customer.MembershipTypeId, new SelectList(Model.MembershipTypes, "Id", "MembershipTypeName"), "Select Membership type", new { @class = "form-control"})
		@Html.ValidationMessageFor(m=>m.Customer.MembershipTypeId)
	</div>

	<div class="form-group">
		@Html.CheckBoxFor(m => m.Customer.IsSuscribedToNewsLetter)
		@Html.LabelFor(m => m.Customer.IsSuscribedToNewsLetter)
	</div>

	@Html.HiddenFor(m=>m.Customer.Id)
	@Html.AntiForgeryToken()
	<button type="submit" class="btn btn-primary"> Save</button>
}
@section scripts
{
	@Scripts.Render("~/bundles/jqueryval")
}

